<Window x:Class="Blood_Donation_Support_System_WPF.AddBloodRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blood_Donation_Support_System_WPF"
        mc:Ignorable="d"
        Title="AddBloodRequestWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Blood Type" />
            <TextBox x:Name="BloodTypeTextBox" Width="200" Margin="0,5"/>

            <TextBlock Text="Status" Margin="0,10,0,0"/>
            <TextBox x:Name="StatusTextBox" Width="200"/>

            <TextBlock Text="Select Component" Margin="0,10,0,0"/>
            <ComboBox x:Name="ComponentComboBox" Width="300" Height="30" DisplayMemberPath="ComponentType" SelectedValuePath="Id"/>

            <!-- This button now adds blood request -->
            <Button Content="Add Blood Request" Click="AddBloodRequestButton_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
