<Window x:Class="Blood_Donation_Support_System_WPF.BloodRequestDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blood Donation Portal - Blood Request Details" Height="300" Width="400">
    <Grid Margin="10" Background="#F0F0F5">
        <StackPanel>
            <TextBlock Text="Chi tiết yêu cầu máu" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#333333"/>
            <TextBlock Text="{Binding Id, StringFormat=ID: {0}}" Margin="0,5" Foreground="#333333"/>
            <TextBlock Text="{Binding BloodType, StringFormat=Nhóm máu: {0}}" Margin="0,5" Foreground="#333333"/>
            <TextBlock Text="{Binding Status, StringFormat=Trạng thái: {0}}" Margin="0,5" Foreground="#333333"/>
            <TextBlock Text="{Binding CreatedDate, StringFormat=Ngày tạo: {0:G}}" Margin="0,5" Foreground="#333333"/>
            <TextBlock Text="{Binding ComponentRequestId, StringFormat=Component ID: {0}}" Margin="0,5" Foreground="#333333"/>
            <Button Content="Đóng" Width="100" Margin="0,20,0,0" HorizontalAlignment="Center" Click="Close_Click" Background="#6A1B9A" Foreground="White" Padding="5,2" BorderBrush="#6A1B9A" BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Window>