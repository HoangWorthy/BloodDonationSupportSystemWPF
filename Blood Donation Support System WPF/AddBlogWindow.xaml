<Window x:Class="Blood_Donation_Support_System_WPF.AddBlogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tạo bài viết mới" Height="500" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <!-- Tiêu đề lớn -->
            <TextBlock Text="📝 Tạo bài viết mới"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="Green"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Trường nhập liệu -->
            <TextBlock Text="Tiêu đề:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtTitle" Margin="0,0,0,10"/>

            <TextBlock Text="Nội dung:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtContent"
                     Height="150"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Tác giả:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtAuthor" Margin="0,0,0,10"/>

            <TextBlock Text="Ngày đăng:" Margin="0,0,0,5"/>
            <DatePicker x:Name="datePicker" Margin="0,0,0,20"/>

            <!-- Nút chức năng -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                <Button Content="❌ Hủy bỏ"
                        Width="100"
                        Margin="10,0"
                        Click="CancelButton_Click"
                        Background="Red"
                        Foreground="White"/>

                <Button Content="✔ Tạo bài viết"
                        Width="120"
                        Margin="10,0"
                        Click="CreateButton_Click"
                        Background="Green"
                        Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

